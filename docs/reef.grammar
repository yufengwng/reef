script
  : stmt* EOF

stmt
  : cmd

cmd
  : cmd_name cmd_arg*

cmd_name
  : WORD

cmd_arg
  : WORD


WORD
  : 

# word escaping:
# \     - for a literal space
# \$    - for a literal dollar
# \\    - escapes the backslash
# \<\n> - escapes the newline and continue reading

